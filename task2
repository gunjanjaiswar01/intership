def reply(user):
    user = user.lower()

    # GREETINGS
    if any(w in user for w in ["hi", "hello", "hey"]):
        return random.choice([
            "Hello! ğŸ˜Š",
            "Hi there! ğŸ‘‹",
            "Hey! How can I help you?"
        ])

    # HOW ARE YOU
    if any(w in user for w in ["how are you", "how r u", "how you doing"]):
        return random.choice([
            "I'm doing great ğŸ˜Š",
            "All good ğŸ‘ Thanks for asking!",
            "I'm fine. Hope you are too!"
        ])

    # NAME
    if "name" in user:
        return random.choice([
            "My name is SmartBot ğŸ¤–",
            "You can call me your chatbot assistant ğŸ˜Š"
        ])

    # WHAT ARE YOU DOING
    if any(w in user for w in ["what are you doing", "what you doing", "doing now"]):
        return random.choice([
            "I'm chatting with you ğŸ˜Š",
            "I'm here to help you ğŸ‘",
            "Talking with you makes my day ğŸ˜„"
        ])

    # LIKE / LOVE
    if any(w in user for w in ["i like you", "i love you"]):
        return random.choice([
            "That's so kind of you â¤ï¸",
            "Aww ğŸ˜Š I like talking to you too!",
            "Thank you! That means a lot ğŸ˜„"
        ])

    # OK / YES / NO
    if user.strip() in ["ok", "okay", "hmm", "oh", "yes", "no"]:
        return random.choice([
            "Alright ğŸ‘",
            "Okay ğŸ˜Š",
            "Got it!"
        ])

    # BYE
    if any(w in user for w in ["bye", "goodbye", "exit"]):
        return random.choice([
            "Goodbye ğŸ‘‹ Take care!",
            "Bye ğŸ˜Š See you soon!"
        ])

    # UNKNOWN BUT SMART
    return random.choice([
        "I understand English, but Iâ€™m still learning ğŸ˜Š",
        "Can you rephrase that in another way?",
        "That sounds interesting!"
    ])


while True:
    user = input("You: ").strip()
    bot_reply = reply(user)
    print("Bot:", bot_reply)

    if any(w in user.lower() for w in ["bye", "exit", "goodbye"]):
        break